<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_name"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/clear_all_routes"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fragment_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_toEndOf="@+id/label_clear"
        android:background="@drawable/contained_rounded_btn"
        android:drawableStart="@drawable/ic_exit_to_app_black_24dp"
        android:elevation="6dp"
        android:padding="8dp"
        android:stateListAnimator="@null"
        android:text="@string/clear"
        android:textSize="16sp"
        android:translationZ="4dp" />

</RelativeLayout>

